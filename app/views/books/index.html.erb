<body>
  <p id="notice"></p>
  <h1>Books</h1>
  <table class="table">
    
     <thead>
        <tr>
          <th>Title</th>
          <th>Body</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      
      <tbody>
        <% @books.each do |book| %>
        <tr>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
          <td><%= link_to "show","/books/#{book.id}" %></td>
          <td><a class="" href="">Edit </a></td>
          <td><a class="" href="">Destroy</a></td>
        </tr>
        <% end %>
        </tbody>
    </table>
  
  <h1>New book</h1>

<%= form_with model: @book do |f| %>
    <h4>タイトル</h4>
    <%=f.text_field :title %>
    
    <h4>本文</h4>
　　<%= f.text_area :body %>
　　
　　<%= f.submit '投稿' %>
<% end %>

